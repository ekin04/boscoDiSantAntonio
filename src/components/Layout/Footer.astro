---
import Logo from "@img/loghi/quadrato_scritta.svg";
import maiella from "@img/loghi/Logo-maiella-escursioni.webp";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import CookieConsent from "@components/Shared/cookie/CookieConsent.astro";
---

<footer class="bg-stone-900 py-16" id="footer">
  <div
    class="text-stone-200 flex flex-col md:flex-row gap-16 justify-between max-w-5xl mx-auto items-center"
  >
    <a href="/" class="" aria-label="Home link"
      ><Image
        title="logo bosco di sant'antonio"
        src={Logo}
        alt="logo bosco di sant'antonio"
        class=""
        width={200}
        height={200}
      /></a
    >
    <div class="text-center">
      <h3 class="text-2xl font-bold">Bosco di Sant'Antonio</h3>
      <p>Esplora la natura selvaggia d'Abruzzo</p>
      <div class="grid grid-cols-4 gap-4 w-full
      mt-4">
        <a
          href="https://www.facebook.com/maiellaescursioni/"
          target="_blank"
          class="text-5xl"
          aria-label="Facebook link"
          ><Icon
            name="mdi:facebook"
            class="text-stone-300 hover:text-stone-100 transition"
          /></a
        >
        <a
          href="https://www.instagram.com/maiellaescursioni/"
          target="_blank"
          class="text-5xl"
          aria-label="Instagram link"
          ><Icon
            name="mdi:instagram"
            class="text-stone-300 hover:text-stone-100 transition"
          /></a
        >
        <a
          href="https://wa.me/393761594011"
          target="_blank"
          class="text-5xl"
          aria-label="Whatsapp link"
          ><Icon
            name="mdi:whatsapp"
            class="text-stone-300 hover:text-stone-100 transition"
          /></a
        >
        <a
          href="tel:+393761594011"
          target="_blank"
          class="text-5xl"
          aria-label="Telefono link"
          ><Icon
            name="mdi:phone"
            class="text-stone-300 hover:text-stone-100 transition"
          /></a
        >
      </div>
    </div>
    <div>
      <h3 class="text-2xl font-bold text-center md:hidden">Partner by</h3>
      <a
        href="https://www.maiellaescursioni.it"
        class="bg-white"
        rel="external"
        target="_blank"
        ><Image
          title="logo maiella escursioni"
          src={maiella}
          alt="logo maiella escursioni"
          class="bg-white rounded-full py-2 my-5"
          width={200}
          height={200}
        /></a
      >
    </div>
  </div>
  <hr class="w-2/3 h-1 mx-auto my-4 bg-stone-500 border-0 rounded" />
  <div class="max-w-5xl mx-auto text-center text-stone-200 mt-5">
    <p>Â© Maiella escursioni 2024</p>
    <p>P.IVA 02785160694</p>
    <div class="mt-3">
      <a href="/cookie_policy" class="hover:text-stone-100 transition"
        >Cookie policy</a
      >
      -
      <a href="/privacy_policy" class="hover:text-stone-100 transition"
        >Privacy policy</a
      >
    </div>
    <div class="mt-3">
      <CookieConsent/>
    </div>
  </div>
</footer>
<script>
  import { aosInit } from "@assets/js/aosInit";
  import {contact} from "@assets/js/contact"
  aosInit();
  document.addEventListener("astro:after-swap", aosInit);
  contact();
  document.addEventListener("astro:page-load", contact);
</script>
