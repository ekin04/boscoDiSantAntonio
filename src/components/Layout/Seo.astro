---
import { SEO } from "astro-seo";
interface Props {
  titolo: string;
  descrizione: string;
  immagine?: string;
  index?: boolean;
  data?: Date;
}
const { titolo, descrizione, immagine, index, data } = Astro.props;
import {
  commitName,
  commitUrl,
  commitLogo,
  phone,
  defaultTitle,
} from "../../../config";
const organizationProperties = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: commitName,
  url: commitUrl,
  logo: commitLogo,
  contactPoint: {
    "@type": "ContactPoint",
    telephone: phone,
  },
};

const articleProperties = {
  "@context": "https://schema.org",
  "@type": "Article",
  headline: titolo,
  author: {
    "@type": "Person",
    name: commitName,
  },
  datePublished: data,
  description: descrizione,
  url: Astro.url.href,
};

const structuredData = data
  ? {
      ...articleProperties,
    }
  : {
      ...organizationProperties,
    };

---

<SEO
  title={titolo}
  titleTemplate={"%s | " + defaultTitle}
  description={descrizione}
  charset="UTF-8"
  nofollow={index === false}
  ,
  noindex={index === false}
  openGraph={{
    basic: {
      title: titolo,
      type: "website",
      image: immagine ? immagine : Astro.url.origin + "/img/og_banner.png",
    },
    optional: {
      description: descrizione,
      locale: "it_IT",
    },
  }}
  ,
  twitter={{
    card: "summary_large_image",
    site: Astro.url.origin,
    title: titolo,
    image: immagine ? immagine : Astro.url.origin + "/img/og_banner.png",
    description: descrizione,
  }}
  extend={{
    link: [
      { rel: "sitemap", href: Astro.url.origin + "/sitemap-index.xml" },
      {
        rel: "icon",
        type: "image/x-icon",
        href: "/favicon/favicon-48x48.png",
        sizes: "48x48",
      },
      { rel: "icon", type: "image/svg+xml", href: "/favicon/favicon.svg" },
      { rel: "icon", type: "image/svg+xml", href: "/favicon/favicon.svg" },
      { rel: "shortcut icon", href: "/favicon/favicon.ico" },
      {
        rel: "apple-touch-icon",
        sizes: "180x180",
        href: "/favicon/apple-touch-icon.png",
      },
      { rel: "manifest", href: "/favicon/site.webmanifest" },
    ],
    meta: [
      { name: "viewport", content: "width=device-width, initial-scale=1.0" },
      { name: "theme-color", content: "#0E9F6E" },
      { name: "apple-mobile-web-app-title", content: defaultTitle },
    ],
  }}
/>
<script is:inline type="application/ld+json" set:html={JSON.stringify(structuredData)} />
